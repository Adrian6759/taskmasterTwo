<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_tasks"
    android:layout_width="400dp"
    android:layout_height="128dp"
    android:background="#233442"
    tools:context=".taskmaster.fragments.TasksFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/TasksFragmentTextViewTitle"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/tasks"
        android:textColor="#EDEAEA"
        app:layout_constraintEnd_toStartOf="@+id/TasksFragmentTextViewBody"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TasksFragmentTextViewBody"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:text="@string/body"
        android:textColor="#EDEAEA"
        app:layout_constraintEnd_toStartOf="@+id/TasksFragmentTextViewState"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TasksFragmentTextViewState"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        android:text="@string/state"
        android:textColor="#EDEAEA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>